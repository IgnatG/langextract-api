# ── Application ──────────────────────────────────────────────────────────────
APP_NAME=LangExtract API
API_V1_STR=/api/v1
ROOT_PATH=
DEBUG=false
LOG_LEVEL=info

# ── CORS (JSON array) ───────────────────────────────────────────────────────
CORS_ORIGINS=["*"]

# ── Redis ────────────────────────────────────────────────────────────────────
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ── API Keys (populate for production) ───────────────────────────────────────
OPENAI_API_KEY=
GEMINI_API_KEY=
LANGEXTRACT_API_KEY=
# ── Provider ─────────────────────────────────────────────────────────────────
DEFAULT_PROVIDER=gpt-4o
# ── LangExtract defaults ────────────────────────────────────────────────────
DEFAULT_MAX_WORKERS=10
DEFAULT_MAX_CHAR_BUFFER=1000
# ── Task defaults ────────────────────────────────────────────────────────────
TASK_TIME_LIMIT=3600
TASK_SOFT_TIME_LIMIT=3300
RESULT_EXPIRES=86400
